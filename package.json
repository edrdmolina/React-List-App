{
  "name": "react-list-app",
  "version": "1.0.0",
  "description": "List app created with MERN stack",
  "main": "index.js",
  "scripts": {
    "client-install": "npm install --prefix client",
    "start": "node index.js",
    "server": "nodemon server.js",
    "client": "npm start --prefix client",
    "dev": "concurrently \"npm run server\" \"npm run client\"",
    "heroku-postbuild": "NPM_CONFIG_PRODUCTION=false npm install --prefix client && npm run build --prefix client"
  },
  "author": "Eduardo Molina",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^7.4.7",
    "axios": "^0.21.1",
    "cors": "^2.8.5",
    "body-parser": "^1.19.0",
    "concurrently": "^6.2.2",
    "connect-mongo": "^4.6.0",
    "cookie-parser": "^1.4.5",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "mongoose": "^6.0.8",
    "passport": "^0.4.1",
    "passport-local": "^1.0.0",
    "passport-local-mongoose": "^6.1.0"
  },
  "devDependencies": {
    "nodemon": "^2.0.13"
  }
}
